{
  "index_patterns": ["blog-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "index.lifecycle.name": "blog-policy",
      "index.lifecycle.rollover_alias": "blog"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "app": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "log_type": {
          "type": "keyword"
        },
        "message": {
          "type": "text"
        },
        "level": {
          "type": "keyword"
        },
        "logger_name": {
          "type": "keyword"
        },
        "thread_name": {
          "type": "keyword"
        },
        "response_time": {
          "type": "long"
        },
        "endpoint": {
          "type": "keyword"
        },
        "method": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "client_ip": {
          "type": "ip"
        },
        "user_agent": {
          "type": "text"
        },
        "error": {
          "type": "text"
        },
        "stack_trace": {
          "type": "text"
        }
      }
    }
  }
} 