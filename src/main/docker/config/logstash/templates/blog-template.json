{
  "index_patterns": ["blog-api-metrics-*", "blog-error-*", "blog-system-metrics-*"],
  "version": 3,
  "priority": 200,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "index.lifecycle.name": "blog-policy",
      "index.lifecycle.rollover_alias": "blog"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "log_type": {
          "type": "keyword"
        },
        "service_name": {
          "type": "keyword"
        },
        "level": {
          "type": "keyword"
        },
        "logger_name": {
          "type": "keyword"
        },
        "thread_name": {
          "type": "keyword"
        },
        "response_time": {
          "type": "long"
        },
        "endpoint": {
          "type": "keyword"
        },
        "method": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "client_ip": {
          "type": "ip"
        },
        "user_agent": {
          "type": "text"
        },
        "error_message": {
          "type": "text"
        },
        "stack_trace": {
          "type": "text"
        },
        "hostname": {
          "type": "keyword"
        },
        "os_name": {
          "type": "keyword"
        },
        "os_version": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "service": {
          "type": "keyword"
        }
      }
    }
  }
}