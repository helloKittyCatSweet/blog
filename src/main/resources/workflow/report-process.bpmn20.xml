<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.flowable.org/bpmn20"
             targetNamespace="http://flowable.org/bpmn20">
    
    <process id="reportReviewProcess" name="举报审核流程">
        <startEvent id="start" name="开始"/>
        <sequenceFlow id="flow1" sourceRef="start" targetRef="submitReport"/>

        <userTask id="submitReport" name="提交举报"/>
        <sequenceFlow id="flow2" sourceRef="submitReport" targetRef="reviewReport"/>

        <userTask id="reviewReport" name="管理员审核"/>
        <sequenceFlow id="flow3" sourceRef="reviewReport" targetRef="decision"/>

        <exclusiveGateway id="decision" name="审核决定"/>

        <sequenceFlow id="flow4" sourceRef="decision" targetRef="approved">
            <conditionExpression>${approved}</conditionExpression>
        </sequenceFlow>

        <sequenceFlow id="flow5" sourceRef="decision" targetRef="rejected">
            <conditionExpression>${!approved}</conditionExpression>
        </sequenceFlow>

        <endEvent id="approved" name="举报通过"/>
        <endEvent id="rejected" name="举报驳回"/>
    </process>
</definitions>